@{
    ViewBag.Title = "Класни стаи";
}
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ClassViewModel>
<div class="container d-flex flex-row">
    <main class="cd-main-content">
        <section>
            <ul style="width: 100%">
                @foreach (var classView in Model)  
                {
                    <partial name="ClassPartialView" model="classView"/>
                }
            </ul>
        </section>
    </main>
</div>
            @if (Model.Count() == 0)
            {
                <div class="cd-fail-message">Няма резултати</div>
            }