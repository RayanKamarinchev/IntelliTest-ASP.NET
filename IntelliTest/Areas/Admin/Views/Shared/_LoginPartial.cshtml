@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using IntelliTest.Data.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        ViewBag.Title = "User Profile";
        <li class="nav-item">
            <a type="submit" class="nav-link text-dark" asp-controller="User" asp-action="Logout"
               asp-route-Id="@UserManager.GetUserId(User)">
                <i class="fa fa-sign-out"></i>
                <span>Logout</span>
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
        </li>
    }
</ul>