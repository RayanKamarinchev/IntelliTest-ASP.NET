@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - IntelliTest</title>
    @await RenderSectionAsync("Styles", required: false)
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/sideSearch.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css"/>
    <link rel="stylesheet" href="~/lib/mathquill/mathquill.min.css"/>
    <script type="text/javascript" src="~/lib/mathquill/mathquill.min.js"></script>
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet">
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/chartjs-plugin-datalabels/0.4.0/chartjs-plugin-datalabels.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css"/>
    <script>
        const colors = ["#4797f2", "#ECA400", "#47f2a2", "#a247f2", "#D81159", "#493B2A", "#BF3100"]
        const gradeColors = ["#2CE574", "#CDF03A", "#FFE500", "#FF9600", "#FF3924"]
        const gradeContrastColors = ["#26C282","#309CD7", "#F6CC17", "#F57455", "#EB4E5D"]
        window.onload=function(){
            let ctx3 = document.getElementById("pie-chart");
            var data3 = [{
                data: [3, 1, 4, 12, 6],
                backgroundColor: gradeContrastColors.slice(0, 5).reverse(),
                borderColor: "#fff"
            }];
            var options = {
                plugins: {
                    datalabels: {
                        formatter: (value, ctx) => {
                            let datasets = ctx.chart.data.datasets;
                            if (datasets.indexOf(ctx.dataset) === datasets.length - 1) {
                                let sum = datasets[0].data.reduce((a, b) => a + b, 0);
                                let percentage = Math.round((value / sum) * 100) + '%';
                                return ("lol", percentage);
                            } else {
                                return percentage;
                            }
                        },
                        color: '#fff',
                    }
                }
            };
            var myChart = new Chart(ctx3, {
                type: 'pie',
                data: {
                    labels: ["Слаб", "Мн. Добър", "Добър", "Среден", "Отличен"],
                    datasets: data3
                },
                options: options
            });
        }

    </script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index">
                            <span class="logoCol1">Intelli</span><span class="logoCol2">Test</span>
                        </a>
                    </li>
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item align-items-center d-flex">
                            <a class="nav-link text-dark" asp-controller="Tests" asp-action="Index">Тестове</a>
                        </li>
                        <li class="nav-item align-items-center d-flex">
                            <a class="nav-link text-dark" asp-controller="Lessons" asp-action="Index">Уроци</a>
                        </li>
                        <li class="nav-item align-items-center d-flex">
                            <a class="nav-link text-dark" asp-controller="Chat" asp-action="Index">Чат</a>
                        </li>
                        <li class="nav-item align-items-center d-flex">
                            <a class="nav-link text-dark" asp-controller="Classes" asp-action="Index">Класове</a>
                        </li>
                    }
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container-mother">
    <main role="main" style="margin-bottom: 50px" id="main">
        @if (TempData["message"] != null && !Context.Request.Path.ToString().StartsWith("/Tests"))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert", aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container  text-center">
        &copy; @DateTime.Now.Year - IntelliTest
    </div>
</footer>
    @if (ViewContext.RouteData.Values["Action"].ToString() != "Take")
{
    <script>
        let isTakingTest = localStorage.getItem("takingTest")
                localStorage.removeItem("takingTest")
        if (isTakingTest) {
            window.location.href = isTakingTest;
        }
    </script>
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true" defer></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>