@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div id="error-page">
    <div class="error-content">
        <h2 class="header">
            @Model.StatusCode
        </h2>
        <h4>
            @Model.Message
        </h4>
        <div class="btns">
            <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Върни се</a>
        </div>
    </div>
</div>
