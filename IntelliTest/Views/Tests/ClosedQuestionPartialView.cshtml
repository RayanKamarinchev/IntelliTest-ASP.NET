@model ClosedQuestionViewModel


<div class="questBox">
    <div class="customRow">
        <div class="questTextBox">
            <input onfocus="onFocus(this)" onblur=onFocusOut(this) placeholder="Въпрос" type="text" value="@Model.Text" asp-for="Text"/>
            <span class="underline"></span>
        </div>
    </div>
    <div class="choice" onFocus="onFocus(this)" onBlur="onFocusOut(this)">
        @for (int i = 0; i < @Model.Answers.Count(); i++)
        {
            <div class="questTextBox option">
                <div>
                    <input type="checkbox"/>
                </div>
                <input onFocus="onFocus(this)" onBlur="onFocusOut(this)" placeholder="Опция @(i+1)" type="text" asp-for="Answers[i]"/>
                <span className={style.underline}></span>
            </div>
        }
        @*<div className={style.floatingContainer}>
            <div onClick={() => {count++; setOptions([...options, option])}} className={style.floatingButton}>+</div>
        </div>*@
    </div>
</div>