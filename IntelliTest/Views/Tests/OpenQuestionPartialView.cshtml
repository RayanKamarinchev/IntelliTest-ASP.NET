@model OpenQuestionViewModel
<div class="questBox">
    <div class="customRow">
        <div class="questTextBox">
            <input onfocus="onFocus(this)" onblur=onFocusOut(this) placeholder="Въпрос" type="text" value="@Model.Text" asp-for="Text"/>
            <span class="underline"></span>
        </div>
    </div>
    <div class="questTextBox" style="margin-top: 20px;margin-left: 50px;">
        <div>
            <input onFocus="onfocus(this)" placeholder="Отговор" onblur="onFocusOut(this)" type="text" value="@Model.Answer" asp-for="Answer"/>
            <span class="underline"></span>
        </div>
    </div>
</div>
