@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IntelliTest.Core.Models.Users.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <form id="registerForm" method="post">
        <div class="container customRegister">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-5 col-md-7">
                    <div class="panel border bg-white">
                        <div class="panel-heading">
                            <h3 class="pt-3 font-weight-bold">Register</h3>
                        </div>
                        <div class="panel-body p-3">
                            <div class="form-group py-2">
                                <div class="input-field">
                                    <input type="text" placeholder="Име" required>
                                </div>
                            </div>
                            <div class="form-group py-2">
                                <div class="input-field">
                                    <input type="text" placeholder="Фамилия" required>
                                </div>
                            </div>
                            <div class="form-group py-2">
                                <div class="input-field">
                                    <input type="text" placeholder="Имейл" required>
                                </div>
                            </div>
                            <div class="form-group py-1 pb-2">
                                <div class="input-field">
                                    <input type="password" placeholder="Парола" required>
                                </div>
                            </div>
                            <div class="form-group py-1 pb-2">
                                <div class="input-field">
                                    <input type="password" placeholder="Повтори Паролата" required>
                                </div>
                            </div>
                            <div class="form-group py-1 pb-2">
                                <div class="input-field">

                                </div>
                            </div>
                            <div class="form-inline">
                                <input type="checkbox" name="remember" id="remember">
                                <label for="remember" class="text-muted">Запомни ме</label>
                                <a href="#" id="forgot" class="font-weight-bold">Забравена парола?</a>
                            </div>
                            <div class="btn btn-primary btn-block mt-3">Логни се</div>
                        </div>
                        <div class="mx-3 my-2 py-2 bordert">
                            <div class="text-center py-3">
                                <a href="https://wwww.facebook.com" target="_blank" class="px-2">
                                    <img src="https://www.dpreview.com/files/p/articles/4698742202/facebook.jpeg" alt="">
                                </a>
                                <a href="https://www.google.com" target="_blank" class="px-2">
                                    <img src="https://www.freepnglogos.com/uploads/google-logo-png/google-logo-png-suite-everything-you-need-know-about-google-newest-0.png" alt="">
                                </a>
                                <a href="https://www.github.com" target="_blank" class="px-2">
                                    <img src="https://www.freepnglogos.com/uploads/512x512-logo-png/512x512-logo-github-icon-35.png" alt="">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>

}